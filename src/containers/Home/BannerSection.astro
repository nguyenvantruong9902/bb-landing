---
import { Image } from "astro:assets";

import BannerDescription from "@components/BannerDescription.astro";
import Container from "@components/Container.astro";
import Title from "@components/Title.astro";

import UserHeroImg from "@assets/images/userHero.png";
import HeroLashIcon from "@assets/svgs/heroLash.svg?raw";

interface Props {
  isMobile?: boolean;
}
---

<Container>
  <div class="flex flex-col justify-between items-center md:flex-row md:pr-16">
    <div class="relative flex flex-col max-w-[34rem]">
      <Title>
        Đặt hẹn & Tận hưởng<br /> với BeautyBooking
      </Title>

      <BannerDescription />
    </div>

    <div class="relative mt-16 max-w-lg">
      <div class="absolute -left-16 -top-16">
        <Fragment set:html={HeroLashIcon} />
      </div>

      <Image src={UserHeroImg} alt="banner" />
    </div>

    <BannerDescription isMobile />
  </div>
</Container>
