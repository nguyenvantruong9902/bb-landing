---
interface Props {
  isMobile?: boolean;
}

import { Image } from "astro:assets";

import BannerDescription from "@components/BannerDescription.astro";

import HeroImg from "@assets/images/hero.png";
---

<div
  class="flex flex-col justify-between items-center px-5 md:flex-row md:pl-20 md:pr-[1.7rem]"
>
  <div class="relative flex flex-col max-w-[34rem]">
    <h1
      class="text-h2 text-opacity-pure text-center font-semibold md:text-left md:text-display"
    >
      Xinh đẹp trong <br />
       tích tắc cùng <br /> BeautyBooking
    </h1>

    <div
      class="hidden absolute -right-16 top-6 loadingio-spinner-dual-ball-ekbho8q873i md:inline-block"
    >
      <div class="ldio-9x0tfy1wwzd">
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>

    <BannerDescription />
  </div>

  <Image src={HeroImg} alt="Banner" class="mt-6" />

  <BannerDescription isMobile />
</div>

<style>
  @keyframes ldio-9x0tfy1wwzd-o {
    0% {
      opacity: 1;
      transform: translate(0 0);
    }
    49.99% {
      opacity: 1;
      transform: translate(80px, 0);
    }
    50% {
      opacity: 0;
      transform: translate(80px, 0);
    }
    100% {
      opacity: 0;
      transform: translate(0, 0);
    }
  }

  @keyframes ldio-9x0tfy1wwzd {
    0% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(80px, 0);
    }
    100% {
      transform: translate(0, 0);
    }
  }
  .ldio-9x0tfy1wwzd div {
    position: absolute;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    top: 60px;
    left: 20px;
  }
  .ldio-9x0tfy1wwzd div:nth-child(1) {
    background: #14309d;
    animation: ldio-9x0tfy1wwzd 1s linear infinite;
    animation-delay: -0.5s;
  }
  .ldio-9x0tfy1wwzd div:nth-child(2) {
    background: #60d7d9;
    animation: ldio-9x0tfy1wwzd 1s linear infinite;
    animation-delay: 0s;
  }
  .ldio-9x0tfy1wwzd div:nth-child(3) {
    background: #14309d;
    animation: ldio-9x0tfy1wwzd-o 1s linear infinite;
    animation-delay: -0.5s;
  }
  .loadingio-spinner-dual-ball-ekbho8q873i {
    width: 200px;
    height: 200px;
    overflow: hidden;
    background: none;
  }
  .ldio-9x0tfy1wwzd {
    width: 100%;
    height: 100%;
    position: relative;
    transform: translateZ(0) scale(1);
    backface-visibility: hidden;
    transform-origin: 0 0; /* see note above */
  }
  .ldio-9x0tfy1wwzd div {
    box-sizing: content-box;
  }
